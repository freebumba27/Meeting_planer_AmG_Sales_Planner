<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    tools:context="com.amgeneralinsurance.amgsalesplanner.DashBoardActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/linearLayoutLogoLayout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >
        <Button
            android:id="@+id/buttonPlanYourWeek"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_color"
            android:padding="5dp"
            android:text="@string/plan_your_week"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="login" />
        <Button
            android:id="@+id/buttonViewYourPlan"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_color"
            android:padding="5dp"
            android:text="@string/view_your_plan"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="login" />
        <Button
            android:id="@+id/buttonPlanSummary"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_color"
            android:padding="5dp"
            android:text="@string/plan_summary"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="login" />
    </LinearLayout>

</RelativeLayout>
